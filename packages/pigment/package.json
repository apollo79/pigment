{
  "name": "@kobalte/pigment",
  "version": "0.0.0",
  "private": false,
  "description": "Ready to use UI components built with Kobalte and Tailwind CSS.",
  "keywords": [
    "solid",
    "solidjs",
    "ui",
    "library",
    "design-system",
    "components",
    "kobalte"
  ],
  "homepage": "https://github.com/kobaltedev/pigment/tree/main/packages/pigment#readme",
  "bugs": {
    "url": "https://github.com/kobaltedev/pigment/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kobaltedev/pigment.git"
  },
  "license": "MIT",
  "author": "Fabien Marie-Louise <fabienml.dev@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "solid": "./dist/index.jsx",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": "./dist/index.cjs"
    },
    "./dist/index.css": "./dist/index.css",
    "./dist/themes/": "./dist/themes/"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && postcss styles --base styles --dir dist",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "vite serve dev --host",
    "storybook": "storybook dev -p 6006",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@kobalte/core": "^0.7.2",
    "@kobalte/utils": "^0.6.1",
    "@solid-primitives/refs": "^1.0.0",
    "class-variance-authority": "^0.4.0",
    "clsx": "^1.2.1"
  },
  "devDependencies": {
    "@kobalte/tailwindcss": "^0.5.0",
    "@storybook/addon-a11y": "7.0.0-beta.43",
    "@storybook/addon-essentials": "7.0.0-beta.43",
    "@storybook/addon-interactions": "7.0.0-beta.43",
    "@storybook/addon-links": "7.0.0-beta.43",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/html": "7.0.0-beta.43",
    "@storybook/html-webpack5": "7.0.0-beta.43",
    "@storybook/theming": "7.0.0-beta.43",
    "autoprefixer": "10.4.13",
    "cssnano": "5.1.15",
    "postcss": "8.4.21",
    "postcss-cli": "10.1.0",
    "postcss-simple-vars": "7.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "7.0.0-beta.43",
    "storybook-dark-mode": "2.0.6",
    "tailwindcss": "3.2.7",
    "tailwindcss-animate": "1.0.5"
  },
  "peerDependencies": {
    "solid-js": "^1.6.12"
  },
  "publishConfig": {
    "access": "public"
  }
}
