{
  "name": "@kobalte/pigment",
  "version": "0.0.0",
  "private": false,
  "description": "Ready to use UI components built with Kobalte and Tailwind CSS.",
  "keywords": [
    "solid",
    "solidjs",
    "ui",
    "library",
    "design-system",
    "components",
    "kobalte"
  ],
  "homepage": "https://github.com/kobaltedev/pigment/tree/main/packages/pigment#readme",
  "bugs": {
    "url": "https://github.com/kobaltedev/pigment/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kobaltedev/pigment.git"
  },
  "license": "MIT",
  "author": "Fabien Marie-Louise <fabienml.dev@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "solid": "./dist/index.jsx",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": "./dist/index.cjs"
    },
    "./style": "./dist/pigment.css"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "vite serve dev --host",
    "storybook": "storybook dev -p 6006",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@kobalte/core": "^0.6.1",
    "@kobalte/utils": "^0.5.1",
